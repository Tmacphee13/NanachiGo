# === Shared ===
# Admin password for /admin login
ADMIN_PASSWORD=changeme

# Default platform when the UI/query string does not specify one.
# Options: aws | gcp
DEFAULT_PLATFORM=aws

# === AWS (Bedrock + DynamoDB) ===
# Region for AWS SDK
AWS_REGION=us-west-2

# Credentials (use whichever chain you prefer; these are common envs)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
# Optional session token if using temporary credentials
AWS_SESSION_TOKEN=

# DynamoDB table name for storing mindmaps
MINDMAPS_TABLE=mindmaps


# === GCP (Gemini + Firestore) ===
# GCP project that hosts Firestore
GCP_PROJECT_ID=

# Path to a service account JSON with Firestore access
GOOGLE_APPLICATION_CREDENTIALS=/absolute/path/to/service-account.json

# Gemini API key
GEMINI_API_KEY=

